@model MyBandTour.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>Informacion de usuario</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="jumbotron">
    <h4>Cambia tu informacion de usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambia tu password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
